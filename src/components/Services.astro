---
interface Service {
    title: string;
    desc: string;
}

interface Props {
    heading: string;
    sub: string;
    list: Service[];
}

const { heading, sub, list } = Astro.props;
---

<section id="services" class="py-24 bg-slate-900">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            
            <div class="md:col-span-1">
                <h2 class="text-4xl text-amber-500 mb-6 leading-tight font-serif">{heading}</h2>
                <p class="text-slate-400 font-light text-sm leading-relaxed">
                    {sub}
                </p>
            </div>

            <div class="md:col-span-2 space-y-12">
                {list.map((service, index) => (
                    <div class="flex gap-6 group">
                        <div class="shrink-0 mt-1"> <svg 
                          xmlns="http://www.w3.org/2000/svg" 
                          viewBox="0 0 24 24" 
                          fill="currentColor" 
                          class="w-8 h-8 text-amber-500/40 group-hover:text-amber-500 group-hover:scale-110 transition-all duration-500 ease-out">
                          <path d="M12 2L14.39 9.61L22 12L14.39 14.39L12 22L9.61 14.39L2 12L9.61 9.61L12 2Z" />
                          </svg>
                        </div>
                        <div>
                            <h3 class="text-2xl text-white mb-3 font-serif">{service.title}</h3>
                            <p class="text-slate-400 font-light leading-relaxed">
                                {service.desc}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>
